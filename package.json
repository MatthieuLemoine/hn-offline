{
  "name": "hn-offline",
  "version": "1.0.0",
  "description": "Access Hacker News Digest's articles even when you're offline.",
  "private": true,
  "author": "MatthieuLemoine",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier-eslint --write --config .prettierrc",
        "eslint --fix",
        "git add"
      ],
      "*.json": [
        "prettier-eslint --write --config .prettierrc",
        "git add"
      ]
    }
  },
  "scripts": {
    "mobile": "node node_modules/react-native/local-cli/cli.js start",
    "dev": "node server/index.js",
    "start": "NODE_ENV=production node server/index.js",
    "test": "jest",
    "lint": "eslint .",
    "prettify": "prettier-eslint --write \"**/*.js*\" --list-different  --config .prettierrc",
    "pretty-check": "prettier-eslint \"**/*.js*\" --list-different  --config .prettierrc",
    "build": "echo true"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "date-fns": "^1.29.0",
    "express": "^4.16.4",
    "googleapis": "^35.0.0",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "react": "16.6.0-alpha.8af6728",
    "react-native": "0.57.4",
    "react-native-pdf": "^5.0.9",
    "react-router-native": "^4.3.0",
    "recompose": "^0.30.0",
    "request": "^2.88.0",
    "rn-fetch-blob": "^0.10.13",
    "scrape-it": "^5.1.0",
    "styled-components": "^4.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/runtime": "^7.1.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "23.6.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-styled-components": "^1.5.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "husky": "^1.1.1",
    "jest": "23.6.0",
    "lint-staged": "^7.3.0",
    "metro-react-native-babel-preset": "0.49.0",
    "prettier": "^1.14.3",
    "prettier-eslint-cli": "^4.7.1",
    "react-test-renderer": "16.6.0-alpha.8af6728"
  },
  "jest": {
    "preset": "react-native"
  }
}
